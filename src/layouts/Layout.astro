---
import "../styles/global.css";
const navItems = [
	{
		path: "/blog",
		label: "Blog",
	},
	{
		path: "/refcards",
		label: "Refcards",
	},
	// {
	// 	path: "/notes",
	// 	label: "Notes",
	// },
	{
		path:"/creative_coding",
		label:"CreativeCoding"
	},
	{
		path:"/timeline",
		label:"Timeline"
	}
];
import Footer from "../components/svelte/Footer.svelte";
import HireMe from "../components/svelte/HireMe.svelte";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
    <!-- Now you can use the library like normal -->
	</head>
	<body>	<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.0/flowbite.min.js"></script>
<script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script> 
		<header>
			<a href="/" rel="home">
				<span role="img" aria-label="suresh"></span>
				suresh
			</a>

			<!-- nav -->
			<nav class="nav">
				{
					navItems.map((item) => {
						return <a href={item.path}>{item.label}</a>;
					})
				}
			</nav>
		</header>
		<slot/>

		<footer>
			<Footer />
		</footer>
		<HireMe/>
	

	</body>
</html>
<style>
	header {
		@apply flex flex-row justify-between items-center space-x-4;
	}
	nav {
		@apply flex flex-row justify-between items-center space-x-4;
	}

	
</style>
