---
import "../styles/global.css";
const navItems = [
	{
		path: "/blog",
		label: "Blog",
	},
	{
		path: "/refcards",
		label: "Refcards",
	},
	{
		path: "/notes",
		label: "Notes",
	},
];
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
	</head>
	<body>
		<header>
			<a href="/" rel="home">
				<span role="img" aria-label="suresh"></span>
				suresh
			</a>

			<!-- nav -->
			<nav class="nav">
				{
					navItems.map((item) => {
						return <a href={item.path}>{item.label}</a>;
					})
				}
			</nav>
			
		</header>
		<slot />
	</body>
</html>
<style is:global>

	:root {
		--accent: 136, 58, 234;
		--background: #2e2e2e;
	}
	html {
		font-family: system-ui, sans-serif;
		background: var(--background);
		background-size: 224px;
		color: #fff;
	}


</style>
<style>
header{
	@apply flex flex-row justify-between items-center space-x-4 ;
}
nav{
	@apply flex flex-row justify-between items-center space-x-4 ;
}




</style>
